  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
  Welcome, <%= current_user.username %>
  <%= button_to "Log Out", session_url, method: :delete %>

  <% else %>
  <%= link_to "Log On", new_session_url %>
  <%= link_to "Sign Up", new_user_url %>
  <% end %>

<%= yield %>

</body>

